# ================================
# AccountIA Frontend - Variables de Entorno
# ================================

# URL del Backend API
VITE_API_URL=http://localhost:8000

# Firebase Configuration
# Obtén estos valores desde Firebase Console > Configuración del proyecto > General > Tu aplicación
VITE_FIREBASE_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
VITE_FIREBASE_AUTH_DOMAIN=accountia-dev.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=accountia-dev
VITE_FIREBASE_STORAGE_BUCKET=accountia-dev.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789012
VITE_FIREBASE_APP_ID=1:123456789012:web:abcdef123456789

# Opcional - Firebase Analytics
# VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Entorno
VITE_APP_ENV=development

# Versión de la app
VITE_APP_VERSION=1.0.0

# URLs de servicios (Para producción)
# VITE_API_URL=https://api.accountia.co

# Feature Flags (Opcional)
VITE_ENABLE_AI_CHAT=false
VITE_ENABLE_PAYMENTS=false

# Google Analytics (Opcional)
# VITE_GA_TRACKING_ID=UA-XXXXXXXXX-X

# Sentry (Opcional - para monitoreo de errores)
# VITE_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx